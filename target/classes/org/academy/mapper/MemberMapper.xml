<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "..//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.academy.mapper.MemberMapper">
	
	<!-- 회원가입 -->
	<insert id="memberJoin">
		insert into STUDENT(STU_ID,BRANCHCODE,PWD,NAME,ADDRESS,GENDER,PHONE,EMAIL,STATUS,AGREE_AD,ENTER,UPDATEDATE) 
  		values(#{STU_ID},#{BRANCHCODE},#{PWD},#{NAME},#{ADDRESS},#{GENDER},#{PHONE},#{EMAIL},1,#{AGREE_AD},SYSDATE, SYSDATE )
	</insert>

	<!-- 아이디 중복검사 -->
  	<select id="idCheck" resultType="int">
  	
  		select count(*) from book_member where memberId = #{memberId}
  	
  	</select>
  	
  	 <!-- 로그인 -->
	<select id="memberLogin" resultType="org.academy.domain.MemberVO">

		select STU_ID, Name from STUDENT where
		STU_ID = #{STU_ID} and PWD = #{PWD}

	</select>

</mapper>